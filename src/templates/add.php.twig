{% extends "base.php.twig" %}


{% block content %}

    <div class="page-header">
        <h1 align='center'>Add new track info</h1>
    </div>

    <form class="form-horizontal" action="functions/add_element.php" method="post">
        <fieldset>


            <!-- Datum-->
            <div class="form-group">
                <label class="col-md-3 control-label" for="datum">DATUM:</label>
                <div class="col-md-6">
                    <input id="name" name="datum" type="date" placeholder="JJJJ-MM-TT" class="form-control">
                </div>
            </div>

            <!-- Strecke-->
            <div class="form-group">
                <label class="col-md-3 control-label" for="strecke">STRECKE:</label>
                <div class="col-md-6">
                    <input id="email" name="strecke" type="text" placeholder="nn / nn.n" class="form-control">
                </div>
            </div>

            <!-- Zeit-->
            <div class="form-group">
                <label class="col-md-3 control-label" for="zeit">ZEIT:</label>
                <div class="col-md-6">
                    <input id="email" name="zeit" type="text" placeholder="hh:mm:ss" class="form-control">
                </div>
            </div>


            <!-- Action -->
            <div class="form-group">
                <div class="col-md-9 text-right">
                    <input type="submit" class="btn btn-primary btn-lg" name="addForm" value="ADD"></input>
                </div>
            </div>

        </fieldset>
    </form>

{% endblock %}